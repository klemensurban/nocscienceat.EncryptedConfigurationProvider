<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>nocscienceat.EncryptedConfigurationProvider</PackageId>
    <Version>2.1.1</Version>
    <Authors>Klemens Urban</Authors>
    <Company>0x4b55 Software Solutions</Company>
    <Description>EncryptedConfigurationProvider for the .Net Configuration System</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Platforms>AnyCPU;x64</Platforms>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageProjectUrl>https://github.com/klemensurban/nocscienceat.EncryptedConfigurationProvider</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="[8.0.2,9.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="[8.0.1,9.0.0)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="[9.0.11,10.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="[9.0.11,10.0.0)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="[10.0.0,11.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="[10.0.0,11.0.0)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="nocscienceat.Aes256GcmRsaCryptoService" Version="[2.1.0,)" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
